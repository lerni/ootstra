{
  // Settings for local development (non-devcontainer)
  // Most settings are in .devcontainer/devcontainer.json for devcontainer use

  // Log Viewer (not in devcontainer extensions)
  "logViewer.watch": [
    {
      "title": "Silverstripe",
      "pattern": "silverstripe.log"
    }
  ],

  // Terminal profiles for local macOS
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh",
      "args": ["-l", "-i"]
    }
  }
}
