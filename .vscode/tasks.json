  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev/build - local",
      "type": "shell",
      "command": "ddev php ./vendor/silverstripe/framework/cli-script.php dev/build flush",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "flushh (hard) - local",
      "type": "shell",
      "command": "ddev exec \"rm -rf /var/www/html/silverstripe-cache/*\" && php -r 'opcache_reset();'",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "npm install & update update-browserslist-db",
      "type": "shell",
      "command": "ddev theme install && ddev exec -d /var/www/html/themes/default npx update-browserslist-db@latest",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
