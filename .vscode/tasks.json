{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev/build - local",
      "type": "shell",
      "command": "php ./vendor/bin/sake db:build --flush",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "SilverStripe Shell",
      "type": "shell",
      "command": "php ./vendor/bin/ssshell",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "npm install & update update-browserslist-db",
      "type": "shell",
      "command": "npm --prefix themes/default install && npm --prefix themes/default update-browserslist-db@latest",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "npm prod",
      "type": "shell",
      "command": "npm --prefix themes/default run build",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "npm watch",
      "type": "shell",
      "command": "npm --prefix themes/default run dev",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "clean '/hot' (Vite watcher)",
      "type": "shell",
      "command": "rm -f /var/www/html/themes/default/hot",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "logs",
      "type": "shell",
      "command": "tail -f /var/log/apache2/error.log /var/log/apache2/access.log /var/log/php/*.log 2>/dev/null",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": [],
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "composer install",
      "type": "shell",
      "command": "composer install",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "composer update",
      "type": "shell",
      "command": "composer u",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
