{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev/build - local",
      "type": "shell",
      "command": "${command:shellCommand.execute}",
      "args": [],
      "options": {
        "shellQuoting": {
          "escape": {
            "character": "\\"
          }
        },
        "shell": {
          "executable": "/bin/bash",
          "args": [
            "-c",
            "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then php ./vendor/bin/sake db:build --flush; else ddev sake db:build --flush; fi"
          ]
        }
      },
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "SilverStripe Shell",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then php ./vendor/bin/ssshell; else ddev php ./vendor/bin/ssshell; fi"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "npm install & update browser data",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then npm --prefix themes/default install && npm --prefix themes/default update browserslist-db baseline-browser-mapping; else ddev npm --prefix themes/default install && ddev npm --prefix themes/default update browserslist-db baseline-browser-mapping; fi"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "npm prod",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then npm --prefix themes/default run build; else ddev npm --prefix themes/default run build; fi"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "npm watch",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then npm --prefix themes/default run dev; else ddev npm --prefix themes/default run dev; fi"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "clean '/hot' (Vite watcher)",
      "type": "shell",
      "command": "rm -f /var/www/html/themes/default/hot",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "close": true
      },
      "icon": {
        "color": "terminal.ansiGreen"
      }
    },
    {
      "label": "logs",
      "type": "shell",
      "command": "tail -f /var/log/apache2/error.log /var/log/apache2/access.log /var/log/php/*.log 2>/dev/null",
      "group": "build",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "problemMatcher": [],
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "composer install",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then composer install; else ddev composer install; fi"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then composer u; else ddev composer u; fi"
      ]
    {
      "label": "composer update",
      "type": "shell",
      "command": "composer u",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "composer vendor-expose",
      "type": "shell",
      "command": "/bin/bash",
      "args": [
        "-c",
        "if [ -f /.dockerenv ] && [ -z \"$CODESPACES\" ]; then composer vendor-expose; else ddev composer vendor-expose; fi"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "download assets from live",
      "type": "shell",
      "command": "php ./vendor/bin/dep silverstripe:download_assets live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "download database from live",
      "type": "shell",
      "command": "php ./vendor/bin/dep silverstripe:download_database live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "ssh live",
      "type": "shell",
      "command": "php ./vendor/bin/dep ssh live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "ssh test",
      "type": "shell",
      "command": "php ./vendor/bin/dep ssh test",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": true,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "deploy test",
      "type": "shell",
      "command": "php ./vendor/bin/dep deploy test",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "deploy live",
      "type": "shell",
      "command": "php ./vendor/bin/dep deploy live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "DDEV: Enable Xdebug",
      "type": "shell",
      "command": "enable_xdebug",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "DDEV: Disable Xdebug",
      "type": "shell",
      "command": "disable_xdebug",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": false,
        "close": true
      },
      "icon": {
        "color": "terminal.ansiMagenta"
      }
    },
    {
      "label": "dep releases test",
      "type": "shell",
      "command": "php ./vendor/bin/dep releases test",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "dep releases live",
      "type": "shell",
      "command": "php ./vendor/bin/dep releases live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "deploy:unlock live",
      "type": "shell",
      "command": "php ./vendor/bin/dep deploy:unlock live",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
        "color": "terminal.ansiCyan"
      }
    },
    {
      "label": "deploy:unlock test",
      "type": "shell",
      "command": "php ./vendor/bin/dep deploy:unlock test",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "focus": true
      },
      "icon": {
